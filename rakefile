# @asset rakefile
# >.. ... >.. ... ... >.. ... .. .>.


desc "base stylesheet generator"
task :build do
  sh "sass src/css/base.scss src/tppm.css"
end

desc "formats code for frontend use"
task :compile => :build do
  #sh "sass -t compressed src/tppm.css ui/css/tppm.css"
  # sass is being bitchy with the compressor so just
  # run a straight copy until a better CSS compression
  # lib can be decided
  sh "cp src/tppm.css ui/css/tppm.css"
end


task :default => :compile
